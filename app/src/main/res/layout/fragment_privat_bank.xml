<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mostovychv.wedmand.bankassistant.fragments.PrivatBankFragment">

    <TextView
        android:id="@+id/textViewPrivatBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrivatBank"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrivatBank"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCorner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                tools:layout_editor_absoluteX="143dp"
                tools:layout_editor_absoluteY="340dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textViewBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textViewSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCurrency1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency1"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/textViewCurrency1Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency1Buy"
                android:textSize="20sp"
                android:layout_margin="5dp"
                 />

            <TextView
                android:id="@+id/textViewCurrency1Sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency1Sell"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCurrency2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency2"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/textViewCurrency2Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency2Buy"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/textViewCurrency2Sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency2Sell"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCurrency3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency3"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/textViewCurrency3Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency3Buy"
                android:textSize="20sp"
                android:layout_margin="5dp"
               />

            <TextView
                android:id="@+id/textViewCurrency3Sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency3Sell"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textViewCurrency4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency4"
                android:textSize="20sp"
                android:layout_margin="5dp"
                 />

            <TextView
                android:id="@+id/textViewCurrency4Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency4Buy"
                android:layout_margin="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewCurrency4Sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency4Sell"
                android:layout_margin="5dp"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
